<h1>Create a Song</h1>

<%= form_for(@song) do |f| %>
  <%= f.label(:title) %>
  <%= f.text_field(:title) %>
  <%= f.label(:artist) %>
  <%= f.text_field(:artist_name) %>
  <%= f.label(:genre) %>
  <%= f.text_field :genre_name, list: "genres_autocomplete" %>
  <datalist id="genres_autocomplete">
    <% Genre.all.each do |genre| %>
      <option value="<%= genre.name %>">
    <% end %>
  </datalist>
  <br>
  <%= f.label(:notes) %>
  <input name="song[notes_content][]" id="song_notes_attributes_0_content">
  <input name="song[notes_content][]" id="song_notes_attributes_1_content">
  <br>
  <%= f.submit("Submit") %>
<% end %>


