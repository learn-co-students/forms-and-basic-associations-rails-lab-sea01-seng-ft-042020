<h1>Create a Song</h1>

<%= form_for(@song) do |f| %>
  <%= f.label(:title) %>
  <%= f.text_field(:title) %>
  <%= f.label(:artist) %>
  <%= f.text_field(:artist_name) %>
  <%= f.label(:genre) %>
  <%= f.collection_select(:genre_id, Genre.all, :id, :name) %>

  <br>
  <%= f.label(:notes) %>
  <!-- Is there a way to do the below with the rails text_field helper method?-->
  <input name="song[notes_content][]" id="song_notes_attributes_0_content">
  <input name="song[notes_content][]" id="song_notes_attributes_1_content">
  <br>
  <%= f.submit("Submit") %>
<% end %>


